{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "polar",
  "patterns": [
    {
      "include": "#inline-query"
    },
    {
      "include": "#rule-def-head"
    },
    {
      "include": "#rule-def-body"
    },
    {
      "include": "#comment"
    }
  ],
  "repository": {
    "inline-query": {
      "begin": "(\\?=)",
      "end": "(;)",
      "beginCaptures": {
        "1": {
          "name": "keyword.control"
        }
      },
      "patterns": [
        {
          "include": "#expression"
        }
      ]
    },
    "rule-def-head": {
      "begin": "[\\s]*([\\w][\\w-]*)(\\()",
      "end": "(\\))",
      "beginCaptures": {
        "1": {
          "name": "support.function"
        }
      },
      "patterns": [
        {
          "include": "#string"
        },
        {
          "include": "#number"
        }
      ]
    },
    "rule-def-body": {
      "begin": "(if)",
      "end": "(;)",
      "beginCaptures": {
        "1": {
          "name": "keyword.control"
        }
      },
      "patterns": [
        {
          "include": "#expression"
        }
      ]
    },
    "expression": {
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#string"
        },
        {
          "include": "#number"
        },
        {
          "include": "#keyword"
        },
        {
          "include": "#operator"
        }
      ]
    },
    "comment": {
      "name": "comment.line.number-sign",
      "match": "#.*"
    },
    "string": {
      "name": "string.quoted.double",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape",
          "match": "\\\\."
        }
      ]
    },
    "number": {
      "name": "constant.numeric",
      "match": "-?[0-9]*.?[0-9]+([eE][-+]?[0-9]+)?"
    },
    "keyword": {
      "patterns": [
        {
          "include": "#and"
        },
        {
          "include": "#or"
        },
        {
          "include": "#not"
        },
        {
          "include": "#new"
        },
        {
          "include": "#unify"
        },
        {
          "include": "#in"
        },
        {
          "include": "#matches"
        },
        {
          "include": "#forall"
        },
        {
          "include": "#debug"
        },
        {
          "include": "#print"
        },
        {
          "include": "#cut"
        }
      ]
    },
    "and": {
      "match": "\\band\\b",
      "name": "constant.character"
    },
    "or": {
      "match": "\\bor\\b",
      "name": "constant.character"
    },
    "not": {
      "match": "\\bnot\\b",
      "name": "constant.character"
    },
    "new": {
      "match": "\\bnew\\b",
      "name": "constant.character"
    },
    "unify": {
      "match": "\\bunify\\b",
      "name": "constant.character"
    },
    "in": {
      "match": "\\bin\\b",
      "name": "constant.character"
    },
    "matches": {
      "match": "\\bmatches\\b",
      "name": "constant.character"
    },
    "forall": {
      "match": "\\bforall\\b",
      "name": "constant.character"
    },
    "debug": {
      "match": "\\bdebug\\b",
      "name": "constant.character"
    },
    "print": {
      "match": "\\bprint\\b",
      "name": "constant.character"
    },
    "cut": {
      "match": "\\bcut\\b",
      "name": "constant.character"
    },
    "operator": {
      "match": "(\\+|-|\\*|\\/|<|>|=|!)",
      "name": "keyword.control"
    }
  },
  "scopeName": "source.polar"
}